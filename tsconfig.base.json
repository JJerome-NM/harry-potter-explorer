{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config/index"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components/index"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages/index"],
      "@ui-kit/*": ["src/shared/ui/kit/*"]
    }
  }
}